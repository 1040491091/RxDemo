<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_permission_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:gravity="center"
        android:maxLines="5"
        android:padding="20dp"
        tools:text="Demo" />


    <ImageView
        android:id="@+id/iv_permission_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_permission_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_blue"
        android:src="@drawable/circle_elves_ball"
        android:padding="3dp" />

    <ProgressBar
        android:id="@+id/pb_activity_permission"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/iv_permission_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/tv_loaded_info"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_loaded_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:maxLines="5"
        android:padding="20dp"
        tools:text="初始化失败，请检查" />

</RelativeLayout>